{
  "editor.codeActionsOnSave": {},
  "files.eol": "\n",
  "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
  "clangd.path": "/usr/bin/clangd-18",
  "C_Cpp.clang_format_path": "/usr/bin/clang-format",
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.rulers": [200],
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  //"editor.wordWrap": "off",
  "editor.renderControlCharacters": true,
  "editor.quickSuggestions": {
    "comments": false
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.typegen.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .gitignore, .env, .env.example, .lintstagedrc, .editorconfig, .tool-versions, .clang-format, compile_flags.txt, LICENSE",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts"
  },
  "search.exclude": {
    "**/node_modules": true
  },
  // Windows GitBash
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // Windowsのデフォルトターミナル
  //"terminal.integrated.defaultProfile.windows": "PowerShell",
  // cmd.exeの場合
  // "terminal.integrated.defaultProfile.windows": "Command Prompt",
  // Linux
  "terminal.integrated.defaultProfile.linux": "bash",
  // macOS Catalina以降
  "terminal.integrated.defaultProfile.osx": "zsh",
}
